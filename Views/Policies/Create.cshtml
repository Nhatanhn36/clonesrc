@model HealthInsurance.Models.Policy;

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
* {box-sizing: border-box;}

body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #333;
  color: white;
}

.header {
  overflow: hidden;
  background-color: #f1f1f1;
  padding: 20px 10px;
}

.header a {
  float: left;
  color: black;
  text-align: center;
  padding: 12px;
  text-decoration: none;
  font-size: 18px; 
  line-height: 25px;
  border-radius: 4px;
}

.header a.logo {
  font-size: 25px;
  font-weight: bold;
}

.header a:hover {
  background-color: #ddd;
  color: black;
}

.header a.active {
  background-color: #333;
  color: white;
}

.header-right {
  float: right;
}

.media screen and (max-width: 500px) {
  .header a {
    float: none;
    display: block;
    text-align: left;
  }
  
  .header-right {
    float: none;
  }
}
a{
  color: white;
  text-decoration: none;
}
.table{
  box-shadow: rgba(252, 252, 252, 0) 5px 7px 15px;
  padding: 10px 0 50px ;
    border-collapse: collapse ;
                                 width: 100%;
}
                        table {
                                 
                                 
                                 border-collapse: collapse ;
                                 width: 100%;
                               }
                               
                               td, th {
                                 border: 1px solid white;
                                 text-align: left;
                                 padding: 8px;
                               }
                               
                               tr:nth-child(1) th {
                                
                                 border: 2px solid #666;
                                 
                               }
                               
                               tr:nth-child(1) {
                                
                                 background-color: white;
                                 color: #333;
                               }
                               
        button {
            width: 40%;
            color: black;
            padding: 15px;
            margin: 10px 30%;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 18px;
            
            background-color: #ffdddd!important;
        }

        form {
            margin: 0 200px;
            
        }

        input[type=text], input[type=password], input[type=email], select {
            width: 100%;
            margin: 8px 0;
            padding: 12px 20px;
            display: inline-block;
            box-sizing: border-box;
            border: 2px solid black;
            border-radius: 5px;
            box-shadow: rgba(255, 255, 255, 0.35) 5px 7px 15px;
            
        }

        button:hover {
            opacity: 0.7;
        }

        .cancelbtn {
            width: auto;
            padding: 10px 18px;
            margin: 10px 5px;
        }


        .container input::placeholder{
            font-size: 18px;
            
        }
        .container {
            padding: 25px;
            background: color #333;;
            border-radius: 5px;
            font-size: 20px;
            font-weight: 500;
            box-shadow: rgba(255, 255, 255, 0.35) 5px 7px 15px;
        }
</style>
</head>
<body>

  <div class="header">
        <a asp-action="Index" class="logo">Health Insurance - Admin</a>
            <div class="header-right">
                  <a class="active" asp-action="Index" asp-controller="Home">Home</a>
                  <a asp-action="Index" asp-controller="Policies">Policy</a>
                  <a asp-action="Index" asp-controller="Companies">Company</a>
                  <a href="employee.html">Employees</a>
                  <a asp-action="RequestDetails" asp-controller="Policies">Request</a>
                  <a asp-action="Logout" asp-controller="Account">Logout</a>
            </div>
  </div>
  
<h1 style="padding:0  250px;">Policy Add Page</h1>
    <div class="table">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PolicyName" class="control-label"></label>
                <input asp-for="PolicyName" class="form-control" />
                <span asp-validation-for="PolicyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PolicyDescription" class="control-label"></label>
                <input asp-for="PolicyDescription" class="form-control" />
                <span asp-validation-for="PolicyDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(Model => Model.CompanyId, "Company")
                @Html.DropDownList("CompanyId")
                @Html.ValidationMessageFor(Model => Model.CompanyId)
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Emi" class="control-label"></label>
                <input asp-for="Emi" class="form-control" />
                <span asp-validation-for="Emi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</body>
</html>


