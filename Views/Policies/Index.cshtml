@model IEnumerable<HealthInsurance.Models.Policy>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1">
<style>
* {box-sizing: border-box;}

body { 
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-color: #333;
  color: white;
}

.header {
  overflow: hidden;
  background-color: #f1f1f1;
  padding: 20px 10px;
}

.header a {
  float: left;
  color: black;
  text-align: center;
  padding: 12px;
  text-decoration: none;
  font-size: 18px; 
  line-height: 25px;
  border-radius: 4px;
}

.header a.logo {
  font-size: 25px;
  font-weight: bold;
}

.header a:hover {
  background-color: #ddd;
  color: black;
}

.header a.active {
  background-color: #333;
  color: white;
}

.header-right {
  float: right;
}
.media screen and (max-width: 500px) {
  .header a {
    float: none;
    display: block;
    text-align: left;
  }
  
  .header-right {
    float: none;
  }
}
a{
  color: white;
  text-decoration: none;
}
.table{
  box-shadow: rgba(252, 252, 252, 0) 5px 7px 15px;
  padding: 10px 30px 50px ;
    border-collapse: collapse ;
                               
}
        table {
            border-collapse: collapse ;
            width: 100%;
        }
                               
        td, th {
            border: 1px solid white;
            text-align: left;
            padding: 8px;
        }

        thead:nth-child(1) th {
            border: 2px solid #666;
        }

        thead:nth-child(1) {
            background-color: white;
            color: #333;
        }
</style>
</head>
<body>
    <div class="header">
        <a asp-action="Index" class="logo">Health Insurance - Admin</a>
        <div class="header-right">
            <a class="active" asp-action="Index" asp-controller="Home">Home</a>
            <a asp-action="Index" asp-controller="Policies">Policy</a>
            <a asp-action="Index" asp-controller="Companies">Company</a>
            <a asp-action="Index" asp-controller="Employee">Employees</a>
            <a asp-action="RequestDetails" asp-controller="Policies">Request</a>
            <a asp-action="Logout" asp-controller="Account">Logout</a>
        </div>
    </div>
    <h1 style="padding:0  250px;">Policy Page</h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <p>
        <a asp-action="PoliciesEmpList">Manage Employee policies</a>
    </p>
    <div class="table">                    
        <div class="domain-price_main ">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.PolicyName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CompanyId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PolicyDescription)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Emi)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.PolicyName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CompanyId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PolicyDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Emi)
                            </td>
                            <td>
                                <a asp-action="Buy" asp-controller="PoliciesEmp" asp-route-id="@item.PolicyId">Buy Policies</a>
                                <a asp-action="Edit" asp-route-id="@item.PolicyId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.PolicyId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.PolicyId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</body>
</html>