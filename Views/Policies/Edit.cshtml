@model HealthInsurance.Models.Policy

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background-color: #333;
            color: white;
        }

        .header {
            overflow: hidden;
            background-color: #f1f1f1;
            padding: 20px 10px;
        }

            .header a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px;
                text-decoration: none;
                font-size: 18px;
                line-height: 25px;
                border-radius: 4px;
            }

                .header a.logo {
                    font-size: 25px;
                    font-weight: bold;
                }

                .header a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .header a.active {
                    background-color: #333;
                    color: white;
                }

        .header-right {
            float: right;
        }

        .media screen and (max-width: 500px) {
            .header a

        {
            float: none;
            display: block;
            text-align: left;
        }

        .header-right {
            float: none;
        }

        }

        a {
            color: white;
            text-decoration: none;
        }

        .table {
            box-shadow: rgba(252, 252, 252, 0) 5px 7px 15px;
            padding: 10px 30px 50px;
            border-collapse: collapse;
        }

        table {
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid white;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(1) th {
            border: 2px solid #666;
        }

        tr:nth-child(1) {
            background-color: white;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="header">
        <a asp-action="Index" class="logo">Health Insurance - Admin</a>
        <div class="header-right">
            <a class="active" asp-action="Index" asp-controller="Home">Home</a>
            <a asp-action="Index" asp-controller="Policies">Policy</a>
            <a asp-action="Index" asp-controller="Companies">Company</a>
            <a href="employee.html">Employees</a>
            <a asp-action="RequestDetails" asp-controller="Policies">Request</a>
            <a asp-action="Logout" asp-controller="Account">Logout</a>
        </div>
    </div>

    <h4>Policy</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PolicyId" />
                <div class="form-group">
                    <label asp-for="PolicyName" class="control-label"></label>
                    <input asp-for="PolicyName" class="form-control" />
                    <span asp-validation-for="PolicyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CompanyId" class="control-label"></label>
                    <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId"></select>
                    <span asp-validation-for="CompanyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PolicyDescription" class="control-label"></label>
                    <input asp-for="PolicyDescription" class="form-control" />
                    <span asp-validation-for="PolicyDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Emi" class="control-label"></label>
                    <input asp-for="Emi" class="form-control" />
                    <span asp-validation-for="Emi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
